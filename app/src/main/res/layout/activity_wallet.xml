<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:id="@+id/wallet_btn_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/wallet_btn_restore"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/space_large"
            android:padding="@dimen/space_large"
            android:background="@color/colorPrimary"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/size_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/create_wallet"/>

    <Button
            android:id="@+id/wallet_btn_restore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/space_large"
            app:layout_constraintTop_toBottomOf="@id/wallet_btn_create"
            android:padding="@dimen/space_large"
            android:background="@color/colorPrimary"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/size_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/restore_wallet"/>

</android.support.constraint.ConstraintLayout>